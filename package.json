{
  "name": "hono-takibi-monorepo",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "deps": "mkdir -p /tmp/pnpm-store && pnpm config set store-dir /tmp/pnpm-store &&rm -rf node_modules && rm -rf pnpm-lock.yaml && rm -rf ~/.pnpm-store && pnpm store prune && pnpm install --no-prefer-frozen-lockfile",
    "doc": "pnpm -F @docs/hono-takibi dev",
    "hono-takibi-deps": "pnpm -F hono-takibi deps",
    "check": "pnpm biome check --write ./",
    "build": "pnpm -F hono-takibi build",
    "typecheck": "pnpm -F hono-takibi typecheck",
    "release": "pnpm -F hono-takibi release",
    "fixtures": "pnpm -F @fixtures/generate dev",
    "fixtures-route": "pnpm -F @fixtures/generate route",
    "fixtures-readonly": "pnpm -F @fixtures/generate readonly-route",
    "fixtures-type": "pnpm -F @fixtures/generate type",
    "fixtures-rpc": "pnpm -F @fixtures/generate rpc",
    "fixtures-typecheck": "pnpm -F @fixtures/generate typecheck",
    "tsgo": "pnpm -F @fixtures/generate typecheck",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@vitest/coverage-v8": "^4.0.16",
    "vitest": "^4.0.16"
  }
}
