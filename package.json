{
  "name": "hono-takibi-monorepo",
  "type": "module",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "license": "MIT",
  "scripts": {
    "deps": "rm -rf node_modules && npm install",
    "hono-takibi-deps": "npm -w hono-takibi deps",
    "fmt": "npx @biomejs/biome format --write ./",
    "lint": "npx @biomejs/biome lint",
    "build": "rm -rf packages/hono-takibi/dist/ && npm run -w hono-takibi build",
    "typecheck": "npm run -w hono-takibi typecheck",
    "test": "npm run -w hono-takibi test",
    "coverage": "npm run -w hono-takibi coverage",
    "release": "npm run build && npm run -w hono-takibi release",
    "takibis": "npm run  -w hono-takibi takibis",
    "website:dev": "npm run -w hono-takibi-website dev",
    "website:build": "npm run -w hono-takibi-website build",
    "website:preview": "npm run -w hono-takibi-website preview",
    "website:deploy": "npm run -w hono-takibi-website deploy"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typedoc": "^0.28.1"
  }
}
