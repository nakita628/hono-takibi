{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["vitest/importMeta", "node"],
    "declaration": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["**/src/**/*.ts"],
  "exclude": ["**/src/**/*.test.ts"]
}
