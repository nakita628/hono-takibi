{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "declaration": true,
    "exactOptionalPropertyTypes": true
  },
  "exclude": ["**/src/**/*.test.ts", "tsdown.config.ts"]
}
