{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.ts",
      "**/*.json",
      "**/*.tsx",
      "!**/.pnpm-store",
      "!**/*.d.ts",
      "!**/node_modules",
      "!**/dist",
      "!**/*.js",
      "!**/routes",
      "!**/readonly-routes",
      "!**/rpcs",
      "!**/types",
      "!**/clients",
      "!fixtures/generate/openapi",
      "!**/fixtures/vite/src/handlers",
      "!**/fixtures/vite/src/rpcs",
      "!**/fixtures/type/*.ts",
      "!**/routeTree.gen.ts",
      "!**/orval",
      "!**/fixtures/single-file",
      "!**/fixtures/split",
      "!**/fixtures/generate",
      "!**/apps/nakita628-opennext-auth-js-twitter-clone"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noBannedTypes": "warn",
        "noExtraBooleanCast": "error",
        "noForEach": "warn",
        "noStaticOnlyClass": "error",
        "noUselessConstructor": "error",
        "noUselessRename": "error",
        "noUselessSwitchCase": "error",
        "useLiteralKeys": "error",
        "useOptionalChain": "error",
        "useSimplifiedLogicExpression": "error"
      },
      "performance": {
        "noDelete": "error"
      },
      "style": {
        "noNegationElse": "warn",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "error",
        "noUnusedTemplateLiteral": "error",
        "useConst": "error",
        "useExponentiationOperator": "error",
        "useImportType": "off",
        "useNamingConvention": "off",
        "useTemplate": "error"
      },
      "correctness": {
        "noUnusedVariables": "off"
      }
    }
  }
}
