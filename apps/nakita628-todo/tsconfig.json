{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node", "vite/client"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "*": ["./*"],
      "@/*": ["./src/*"]
    }
  }
}
