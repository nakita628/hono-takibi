{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "skipLibCheck": true,
      "lib": ["ESNext"],
      "jsx": "react-jsx",
      "exactOptionalPropertyTypes": true,
      "paths": {
        "@/*": ["./src/*"]
      },
      "allowJs": true,
      "noEmit": true,
      "incremental": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "plugins": [
        {
          "name": "next"
        }
      ]
    },
    "include": [
      "next-env.d.ts",
      ".next/types/**/*.ts",
      ".next/dev/types/**/*.ts",
      "**/*.mts",
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": ["node_modules"]
  }